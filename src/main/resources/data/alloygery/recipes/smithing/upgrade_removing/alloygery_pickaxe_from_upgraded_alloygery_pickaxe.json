{
  "type": "nbtcrafting:smithing",
  "base": {
    "item": "alloygery:smithing_hammer",
    "remainder": {
      "item": "alloygery:smithing_hammer",
      "data": {
        "Damage": "$base.Damage + 5"
      }
    }
  },
  "ingredient": {
    "tag": "alloygery:upgraded_pickaxes"
  },
  "result": {
    "item": "alloygery:alloygery_pickaxe",
    "data": {
      "Damage": "$ ingredient.Damage",
      "Enchantments": "$ ingredient.Enchantments",
      "HeadMaterial": "$ ingredient.HeadMaterial",
      "BindingMaterial": "$ ingredient.BindingMaterial",
      "HandleMaterial": "$ ingredient.HandleMaterial"
    }
  }
}
